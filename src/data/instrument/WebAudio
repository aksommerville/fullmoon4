begin 0x02 # Thick siney organ.
  wave sine
  env 20 40 20 10 200 .. 5 ff 25 40 500
  modRate 1
  modRange 2
  modEnv 40 50 40 150 40 200 20 .. 00 30 ff 100 80 200 20
end

begin 0x03 # in-your-face pipe organ
  wave 4000 0800 2000 0200 1000 0080 0800
  env 70 60 40 40 500 .. 60 c0 40 a0 800
end

begin 0x04
  wave sine
  env 30 80 40 40 200 .. 20 ff 25 80 300
  modRate 0.5
  modRange 1.5
  modEnv 80 20 80 50 80 50 80 .. 40 20 ff 50 ff 250 c0
end

begin 0x14 # plain tight beep
  wave triangle
  env 30 80 30 60 150 .. 20 ff 20 a0 150
end

begin 0x01 # gentle organ
  wave 0000 ffff 2888 4111 0000 0111
  env 20 80 20 20 300 .. 10 ff 20 50 600
  modRate 2
  modRange 0.4
  modEnv ff 20 00 40 c0 100 80
  modRangeLfoRate 1.1
  wheelRange 200
end

begin 0x05 # wicked space guitar
  wave square
  env 10 40 20 40 200 .. 5 ff 20 80 300
  modRate 0.5
  modRange 5
  modEnv 00 50 00 400 00 200 00 .. 80 50 c0 400 80 200 00
end

begin 0x06
  wave 0000 cccc 0000 6666 0000 2222 0000 0888
  env 15 ff 30 06 300
  modRate 12
  modRange 5
  modEnv ff 10 c0 30 ff 200 60
end

# --------------------------------------------- begin sound effects ---------------------------

sound BELL
  len 0.600
  fm 0 2000 6.3 ( 5 ) sine
  env 0 ( 0 30 0xffff 50 0x2000 * 0 )
  norm 0 0.200
end

sound REJECT_ITEM
  len 0.300
  fm 0 ( 100 40 400 * 50 ) 0.5 ( 0 30 2 50 0.5 * 3 ) sine
  env 0 ( 0 60 0xffff * 0 )
  norm 0 0.200
end

sound CHEESE
  len 1.500
  fm 0 ( 600 150 1400 ) 1 ( 0 100 5 50 1 ) sine
  env 0 ( 0 80 0xffff 70 0 )
  delay 0 0.160 0.5 0.5 0.5 0.5
  norm 0 0.200
end

sound HURT
  len 0.400
  fm 0 ( 500 * 40 ) 0.5 ( 5 * 0 ) sine
  env 0 ( 0 30 0xffff * 0 )
  norm 0 0.200
end

sound PITCHER_NO_PICKUP # Same as REJECT_ITEM. Maybe eliminate this sound.
  len 0.300
  fm 0 ( 100 40 400 * 50 ) 0.5 ( 0 30 2 50 0.5 * 3 ) sine
  env 0 ( 0 60 0xffff * 0 )
  norm 0 0.200
end

sound PITCHER_PICKUP
  len 0.400
  fm 0 ( 400 * 500 ) 0.9 ( 5 * 1 ) sine
  env 0 ( 0x2000 80 0xffff 80 0x2000 80 0xffff 80 0x2000 80 0xffff )
  env 0 ( 0 50 0xffff * 0 )
  norm 0 0.200
end

sound PITCHER_POUR
  len 0.800
  fm 0 ( 600 400 500 ) 2 ( 1 100 5 300 3 ) sine
  env 0 ( 0 80 0xffff 320 0 )
  delay 0 0.010 0.5 0.5 0.5 0.9
  norm 0 0.200
end

sound MATCH
  len 0.200
  noise 0
  env 0 ( 0 30 0xffff 50 0x4000 * 0 )
  fm 1 ( 40 40 50 40 40 40 50 40 40 40 50 ) 0.5 ( 2 ) sine
  env 1 ( 0 50 0xffff * 0 )
  mix 0 1
  norm 0 0.200
end

sound DIG
  len 0.300
  fm 0 ( 300 * 400 ) 0.4 ( 2 * 3 ) sine
  env 0 ( 0 30 0x8000 50 0x4000 * 0 )
  fm 1 ( 200 * 600 ) 0.25 ( 1 80 3 ) sine
  env 1 ( 0 50 0xffff 80 0x2000 * 0 )
  mix 0 1
  norm 0 0.200
end

sound REJECT_DIG
  len 0.300
  fm 0 ( 100 40 400 * 50 ) 0.5 ( 0 30 2 50 0.5 * 3 ) sine
  env 0 ( 0 60 0xffff * 0 )
  norm 0 0.200
end

sound INJURY_DEFLECTED
  len 0.200
  fm 0 ( 1200 50 100 * 1600 ) 2 ( 1 * 3 ) sine
  env 0 ( 0 30 0xffff 50 0x4000 * 0 )
  norm 0 0.200
end

sound 12
  len 0.500
  noise 0
  bandpass 0 600 180
  bandpass 0 600 190
  env 0 ( 0 20 0xffff 100 0x1000 * 0 )
  norm 0 0.500
end
